# Gemfile
source "https://rubygems.org"

gem "jekyll", "~> 4.1"
gem "sass", "~> 1.70"

# Jekyll サーバーに必要な webrick
gem "webrick", "~> 1.8"

# Markdown エンジン
gem "kramdown", "~> 2.5"

# GitHub Pages 用プラグイン群（GitHub Pages と互換性のあるバージョン）
gem "github-pages", group: :jekyll_plugins
gem "jekyll-feed", "~> 0.16"      # RSSフィード生成
gem "jekyll-seo-tag", "~> 2.8"    # SEO タグ自動生成
gem "jekyll-sitemap", "~> 1.5"    # サイトマップ生成
