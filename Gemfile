# Gemfile
source "https://rubygems.org"

ruby '3.4.5'
gem "jekyll"
gem "sass"
gem "fiddle"

# Jekyll サーバーに必要な webrick
gem "webrick"

# Markdown エンジン
gem "kramdown"

# GitHub Pages 用プラグイン群（GitHub Pages と互換性のあるバージョン）
gem "github-pages", group: :jekyll_plugins
gem "jekyll-feed"     # RSSフィード生成
gem "jekyll-seo-tag"   # SEO タグ自動生成
gem "jekyll-sitemap"    # サイトマップ生成
